{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true
  },
  "type": "module",
  "include": ["src/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules"]
}
